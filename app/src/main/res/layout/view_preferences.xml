<com.haarman.pebblenotifier.view.preferences.PreferencesView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_preferences_generalheader"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_preferences_header" />

    <CheckBox
        android:id="@+id/view_preferences_ignoremultiplecb"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_preferences_generalheader"
        android:gravity="center_vertical"
        android:padding="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/view_preferences_generalheader"
        android:layout_toLeftOf="@id/view_preferences_ignoremultiplecb"
        android:background="?android:selectableItemBackground"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/view_preferences_ignoremultiple" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view_preferences_ignoremultiplecb"
        android:background="@android:color/darker_gray" />

    <CheckBox
        android:id="@+id/view_preferences_sendwhenscreenoncb"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/view_preferences_ignoremultiplecb"
        android:gravity="center_vertical"
        android:padding="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/view_preferences_ignoremultiplecb"
        android:layout_toLeftOf="@id/view_preferences_sendwhenscreenoncb"
        android:background="?android:selectableItemBackground"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/view_preferences_sendwhenscreenon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/view_preferences_sendwhenscreenoncb"
        android:background="@android:color/darker_gray" />
</com.haarman.pebblenotifier.view.preferences.PreferencesView>
