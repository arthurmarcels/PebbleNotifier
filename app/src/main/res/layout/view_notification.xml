<com.haarman.pebblenotifier.view.main.NotificationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:divider="?android:dividerVertical"
    android:dividerPadding="16dp"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/view_notification_appiv"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:padding="12dp"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_notification_titletv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:textStyle="bold"
            tools:text="me@gmail.com" />

        <TextView
            android:id="@+id/view_notification_texttv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:lines="3"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            tools:text="Hey me!\nI'm just checking in to see how I'm doing.\nHow am I?\nCheers,\nme." />
    </LinearLayout>

    <ImageView
        android:id="@+id/view_notification_muteiv"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_mute" />

</com.haarman.pebblenotifier.view.main.NotificationView>