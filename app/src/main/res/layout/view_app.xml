<com.haarman.pebblenotifier.view.mutedapps.AppView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:divider="?android:dividerVertical"
    android:dividerPadding="16dp"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/view_app_appiv"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:padding="12dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/view_app_texttv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/view_app_muteiv"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:padding="12dp"
        android:scaleType="centerInside"
        android:src="@drawable/btn_mute" />

</com.haarman.pebblenotifier.view.mutedapps.AppView>